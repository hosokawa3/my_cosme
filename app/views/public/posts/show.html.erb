<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @post.get_image(500, 500) %>
    </div>
    <div class="col-md-5">
      <h3 class="my-5">
        <%= @post.name %>
      </h3>
      <p><%= @post.review %></p>
      <p><%= @post.price %>円</p>
      <p><%= @post.brand %></p>
      <p><%= render "rate", post: @post %></p>
      <p class="user_name fw-lighter">投稿者:<%= @post.user.user_name %></p>
      <%= link_to edit_post_path(@post), class: "btn btn-light" do %>
      <i class="fa-solid fa-pen" style="color: #a1a1a1;"></i>編集する
      <% end %>
    </div>
  </div>
</div>